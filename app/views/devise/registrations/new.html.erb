<div style="text-align: center;"> <h2>Please sign up!</h2> </div>

<br>
<div class="row justify-content-center">
  <div class="col-sm-12 col-md-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="card card-fluid">
        <h6 class="card-header">
          Enter sign-up information
        </h6>

        <div class="card-body" >

          <div class="form-group row" >
            <%= f.label :name, class: 'col-form-label col-sm-12 col-md-8'%>
            <div class="col-sm-12 col-md-6">
              <%= f.text_field :name, class: " form-control", placeholder: :name, autofocus: true %>
            </div>
          </div>


          <div class="form-group row" >
            <%= f.label :email, class: 'col-form-label col-sm-12 col-md-8'%>
            <div class="col-sm-12 col-md-6">
              <%= f.email_field :email, class: " form-control", placeholder: :email, autofocus: true %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: 'col-form-label col-sm-12 col-md-8' %>
            <div class="col-sm-12 col-md-6">
              <%= f.password_field :password,  class: "form-control", autocomplete: "current-password", placeholder: :password %>
            </div>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, class: 'col-form-label col-sm-12 col-md-8' %>
            <div class="col-sm-12 col-md-6">
              <%= f.password_field :password_confirmation, class: " form-control", autocomplete: "new-password" %>
            </div>
          </div>


        </div>

        <div class="card-footer text-right">
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-sm' %>
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    <% end %>

  </div>
</div>


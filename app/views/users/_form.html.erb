<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8">

    <%= form_for(user) do |f| %>
      <div class="card card-fluid">
        <h6 class="card-header">

          <% if defined?(modify_user) %>
            Update <%= user.name %>'s record
          <%elsif defined?(new_user) %>
            Enter new User's record
          <% end %>
        </h6>

        <div class="card-body" >
                  <% if user.errors.any? %>
                    <div class="alert alert-danger" role="alert">
                      <ul>
                        <% user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="form-group row">
                    <%= f.label :name, class: 'col-form-label col-sm-12 col-md-4' %>
                    <div class="col-sm-12 col-md-8">
                      <%= f.text_field :name, class: " form-control", placeholder: :name, autofocus: true %>
                    </div>
                  </div>


                  <div class="form-group row">
                    <%= f.label :email, class: 'col-form-label col-sm-12 col-md-4' %>
                    <div class="col-sm-12 col-md-8">
                      <%= f.text_field :email, class: " form-control", placeholder: :email %>
                    </div>
                  </div>
        </div>

        <div class="card-footer text-right">
                <%= link_to 'Back', users_path, class: 'btn btn-primary btn-sm' %> |
                <%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
        </div>

    <% end %>

    </div>
  </div>
</div>

<%= "<div> <br> </div>".html_safe %>

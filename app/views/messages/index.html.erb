<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8">

    <div class="card card-fluid">
      <h6 class="card-header">
        <span class="badge badge-pill badge-info"><h3>Messages</h3></span> <br>
        Message Information
      </h6>

      <div class="card-body" >
        <%= render '/messages/display_messages', messages: @messages, adjust: true %>
      </div>

      <div class="card-footer text-right">
        <%= link_to 'New Message', new_message_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>

  </div>
</div>